function escapeHtml(s) { return String(s).replace(/&/g,'&amp;').replace(/</g,'&lt;').replace(/>/g,'&gt;'); }
function capitalize(s) { return s ? s.charAt(0).toUpperCase() + s.slice(1) : s; }
function formatDate(date) { return new Date(date).toISOString().split('T')[0]; }

function initDateAndSubjects() {
  dateSelect.value = formatDate(new Date());
  subjectSelect.innerHTML = ''; // Clear existing options
  SUBJECTS.forEach(sub => {
    const opt = document.createElement('option');
    opt.value = sub;
    opt.textContent = sub;
    subjectSelect.appendChild(opt);
  });
  subjectSelect.addEventListener('change', () => {
    const student = findStudent(searchInput.value.trim());
    if (student) showFound(student);
    renderRecent();
    renderMasterList();
    updateBackgroundSymbols(subjectSelect.value);
  });
  dateSelect.addEventListener('change', () => {
    searchInput.value = '';
    currentSelectedEnrollment = null;
    updateSelectedInList();
    foundArea.innerHTML = '<div class="muted">Select date, subject, and search to start.</div>';
    renderRecent();
    renderMasterList();
  });
  updateBackgroundSymbols(SUBJECTS[0]);
  renderMasterList();
}
initDateAndSubjects();

function updateBackgroundSymbols(subject) {
  particles.innerHTML = '';
  const symbols = subjectSymbols[subject] || [];
  for (let i = 0; i < 30; i++) {
    const p = document.createElement('div');
    p.className = 'particle';
    p.textContent = symbols[Math.floor(Math.random() * symbols.length)] || '?';
    p.style.left = `${Math.random() * 100}%`;
    p.style.fontSize = `${Math.random() * 20 + 15}px`;
    p.style.animationDuration = `${Math.random() * 10 + 8}s`;
    p.style.animationDelay = `-${Math.random() * 10}s`;
    particles.appendChild(p);
  }
}

function findStudent(q) {
  if (!q) return null;
  q = q.trim().toLowerCase();
  return realStudents.find(s => s.enrollmentNumber.toLowerCase() === q || s.name.toLowerCase() === q) ||
         realStudents.find(s => s.enrollmentNumber.toLowerCase().includes(q) || s.name.toLowerCase().includes(q)) || null;
}

function renderRecent() {
  const subject = subjectSelect.value;
  const date = dateSelect.value;
  recentList.innerHTML = '';
  const records = recentAttendance[subject] || [];
  records.sort((a, b) => new Date(b.date) - new Date(a.date) || b.timestamp.localeCompare(a.timestamp));
  const filteredRecords = date ? records.filter(r => r.date === date) : records;
  filteredRecords.forEach(rec => {
    const row = document.createElement('div');
    row.className = 'rec-row';
    row.innerHTML = `
      <div class="left">
        <div class="avatar">${(rec.studentName || '--').split(' ').slice(0,2).map(w=>w[0]).join('')}</div>
        <div>
          <div class="student-name">${escapeHtml(rec.studentName)}</div>
          <div class="meta">${rec.enrollmentNumber} ‚Ä¢ ${rec.date} ‚Ä¢ ${rec.timestamp}</div>
        </div>
      </div>
      <div style="display:flex;gap:8px;align-items:center">
        <div class="badge ${rec.status}">${capitalize(rec.status)}</div>
        <button class="btn-ghost">Edit</button>
      </div>
    `;
    row.querySelector('button').addEventListener('click', e => {
      e.stopPropagation();
      openEditPopup(rec.enrollmentNumber, row.querySelector('button'), rec.subject, rec.date);
    });
    recentList.appendChild(row);
  });
  if (!filteredRecords.length) {
    recentList.innerHTML = `<div class="muted">No recent marks for ${subject}${date ? ` on ${date}` : ''}.</div>`;
  }
}

function renderMasterList() {
  masterList.innerHTML = '';
  if (!realStudents.length) {
    masterList.innerHTML = '<div class="muted">No students available.</div>';
    showToast('Student list is empty');
    return;
  }
  const date = dateSelect.value;
  const subject = subjectSelect.value;
  realStudents.forEach(s => {
    const div = document.createElement('div');
    div.className = `master-item${s.enrollmentNumber === currentSelectedEnrollment ? ' selected' : ''}`;
    div.setAttribute('data-enroll', s.enrollmentNumber);
    const rec = attendanceRecords[s.enrollmentNumber] || { dates: {} };
    const status = rec.dates[date] && rec.dates[date][subject] ? rec.dates[date][subject].status : '‚Äî';
    div.innerHTML = `
      <div class="master-left">
        <div>
          <div class="student-name">${escapeHtml(s.name)}</div>
          <div class="meta">${escapeHtml(s.enrollmentNumber)}</div>
        </div>
      </div>
      <div class="master-status">Status: ${capitalize(status)}</div>
    `;
    div.addEventListener('click', () => {
      currentSelectedEnrollment = s.enrollmentNumber;
      updateSelectedInList();
      showFound(s);
      searchInput.value = s.enrollmentNumber;
    });
    div.addEventListener('dblclick', () => showStudentDetails(s));
    masterList.appendChild(div);
  });
}

function updateSelectedInList() {
  masterList.querySelectorAll('.master-item').forEach(div => div.classList.remove('selected'));
  if (currentSelectedEnrollment) {
    const selectedDiv = masterList.querySelector(`[data-enroll="${currentSelectedEnrollment}"]`);
    if (selectedDiv) selectedDiv.classList.add('selected');
  }
}

function showFound(student) {
  if (!student) {
    foundArea.innerHTML = '<div class="muted">Student not found.</div>';
    return;
  }
  currentSelectedEnrollment = student.enrollmentNumber;
  updateSelectedInList();
  const date = dateSelect.value;
  const subject = subjectSelect.value;
  const rec = attendanceRecords[student.enrollmentNumber] || { dates: {} };
  const current = rec.dates[date] && rec.dates[date][subject] || null;
  foundArea.innerHTML = `
    <div class="found-card">
      <div style="display:flex;justify-content:space-between;align-items:center">
        <div>
          <div class="student-name">${escapeHtml(student.name)}</div>
          <div class="meta">${escapeHtml(student.enrollmentNumber)}</div>
        </div>
        <div style="text-align:right">
          <div class="title">${escapeHtml(subject)} - ${date}</div>
          <div class="meta">${current ? capitalize(current.status) : '‚Äî'}</div>
        </div>
      </div>
      <div class="subject-pills">
        ${SUBJECTS.map(s => `<span class="sub-pill ${s === subject ? 'active' : ''}" data-sub="${s}">${s}</span>`).join('')}
      </div>
      <hr style="margin:10px 0;border:none;border-top:1px solid var(--border)">
      <div style="display:flex;gap:10px;align-items:center">
        <button data-action="present" class="btn-ok">Present</button>
        <button data-action="late" class="btn-warn">Late</button>
        <button data-action="absent" class="btn-bad">Absent</button>
        <button id="undoBtn" class="btn-ghost">Undo</button>
        <button id="nextBtn" class="btn-primary">Next</button>
      </div>
    </div>
  `;
  foundArea.querySelectorAll('.sub-pill').forEach(el => {
    el.addEventListener('click', () => {
      subjectSelect.value = el.getAttribute('data-sub');
      subjectSelect.dispatchEvent(new Event('change'));
    });
  });
  foundArea.querySelectorAll('button[data-action]').forEach(btn => {
    btn.addEventListener('click', () => {
      if (!getCurrent()) return showToast('Please sign in');
      markSubject(student, subject, btn.getAttribute('data-action'), date);
    });
  });
  const undoBtn = foundArea.querySelector('#undoBtn');
  if (undoBtn) undoBtn.addEventListener('click', () => clearSubjectMark(student, subject, date));
  const nextBtn = foundArea.querySelector('#nextBtn');
  if (nextBtn) nextBtn.addEventListener('click', () => autoAdvanceToNext(student.enrollmentNumber));
}

function ensureRecord(enrollmentNumber) {
  if (!attendanceRecords[enrollmentNumber]) {
    attendanceRecords[enrollmentNumber] = { dates: {} };
  }
  return attendanceRecords[enrollmentNumber];
}

async function markSubject(student, subject, status, date) {
  const cur = getCurrent();
  if (!cur) return showToast('Please sign in');
  try {
    const rec = ensureRecord(student.enrollmentNumber);
    if (!rec.dates[date]) rec.dates[date] = {};
    rec.dates[date][subject] = { status, timestamp: new Date().toLocaleTimeString() };
    if (!lectureDates[subject].includes(date)) {
      lectureDates[subject].push(date);
      lectureDates[subject].sort();
    }
    const record = {
      id: `${cur.username}_${student.enrollmentNumber}_${date}_${subject}`,
      username: cur.username,
      studentName: student.name,
      enrollmentNumber: student.enrollmentNumber,
      status,
      subject,
      date,
      timestamp: rec.dates[date][subject].timestamp
    };
    recentAttendance[subject] = recentAttendance[subject].filter(r => r.id !== record.id);
    recentAttendance[subject].unshift(record);
    await saveAttendanceRecord(cur.username, record);
    renderRecent();
    renderMasterList();
    renderLow();
    saveStateForCurrent();
    showToast(`Marked ${status} for ${student.name}`);
    autoAdvanceToNext(student.enrollmentNumber);
  } catch (error) {
    showToast('Error marking attendance: ' + error.message);
  }
}

async function clearSubjectMark(student, subject, date) {
  const cur = getCurrent();
  if (!cur) return showToast('Please sign in');
  try {
    const rec = attendanceRecords[student.enrollmentNumber];
    if (rec && rec.dates[date] && rec.dates[date][subject]) {
      delete rec.dates[date][subject];
      if (!Object.keys(rec.dates[date]).length) delete rec.dates[date];
    }
    let hasAny = false;
    Object.values(attendanceRecords).forEach(r => {
      if (r.dates && r.dates[date] && r.dates[date][subject]) hasAny = true;
    });
    if (!hasAny) {
      lectureDates[subject] = lectureDates[subject].filter(d => d !== date);
    }
    recentAttendance[subject] = recentAttendance[subject].filter(r => r.enrollmentNumber !== student.enrollmentNumber || r.date !== date);
    if (!db) await openDB();
    const tx = db.transaction(['attendanceRecords'], 'readwrite');
    const store = tx.objectStore('attendanceRecords');
    await new Promise((resolve, reject) => {
      const request = store.delete(`${cur.username}_${student.enrollmentNumber}_${date}_${subject}`);
      request.onsuccess = resolve;
      request.onerror = () => reject(request.error);
    });
    renderRecent();
    renderMasterList();
    renderLow();
    saveStateForCurrent();
    showToast('Mark cleared');
  } catch (error) {
    showToast('Error clearing mark: ' + error.message);
  }
}

let activePopup = null;
function openEditPopup(enrollmentNumber, anchorEl, subjectDefault, dateDefault) {
  if (!getCurrent()) return showToast('Please sign in');
  if (activePopup) activePopup.remove();
  const rect = anchorEl.getBoundingClientRect();
  const popup = document.createElement('div');
  popup.style.position = 'absolute';
  popup.style.background = 'var(--card-bg)';
  popup.style.padding = '12px';
  popup.style.borderRadius = '10px';
  popup.style.border = '1px solid var(--border)';
  popup.style.top = `${rect.bottom + window.scrollY + 8}px`;
  popup.style.left = `${rect.left + window.scrollX}px`;
  popup.style.boxShadow = '0 4px 12px rgba(0,0,0,0.3)';
  popup.innerHTML = `
    <div style="display:flex;flex-direction:column;gap:10px">
      <label>Date: <input id="popupDate" type="date" value="${dateDefault || formatDate(new Date())}"></label>
      <label>Subject: <select id="popupSub">${SUBJECTS.map(s => `<option value="${s}" ${s===subjectDefault?'selected':''}>${s}</option>`).join('')}</select></label>
      <label>Status: <select id="popupStatus"><option value="present">Present</option><option value="late">Late</option><option value="absent">Absent</option></select></label>
      <div style="display:flex;gap:10px">
        <button id="popupSave" class="btn-ok">Save</button>
        <button id="popupCancel" class="btn-ghost">Cancel</button>
      </div>
    </div>
  `;
  document.body.appendChild(popup);
  activePopup = popup;
  window.addEventListener('click', e => { if (activePopup && !activePopup.contains(e.target)) activePopup.remove(); activePopup = null; }, {once: true});
  document.getElementById('popupCancel').addEventListener('click', () => { activePopup.remove(); activePopup = null; });
  document.getElementById('popupSave').addEventListener('click', async () => {
    try {
      const date = document.getElementById('popupDate').value;
      const sub = document.getElementById('popupSub').value;
      const status = document.getElementById('popupStatus').value;
      const cur = getCurrent();
      const student = realStudents.find(s => s.enrollmentNumber === enrollmentNumber);
      const rec = ensureRecord(enrollmentNumber);
      if (!rec.dates[date]) rec.dates[date] = {};
      rec.dates[date][sub] = { status, timestamp: new Date().toLocaleTimeString() };
      if (!lectureDates[sub].includes(date)) {
        lectureDates[sub].push(date);
        lectureDates[sub].sort();
      }
      recentAttendance[sub] = recentAttendance[sub].filter(r => r.enrollmentNumber !== enrollmentNumber || r.date !== date);
      const record = {
        id: `${cur.username}_${enrollmentNumber}_${date}_${sub}`,
        username: cur.username,
        studentName: student.name,
        enrollmentNumber,
        status,
        subject: sub,
        date,
        timestamp: rec.dates[date][sub].timestamp
      };
      recentAttendance[sub].unshift(record);
      await saveAttendanceRecord(cur.username, record);
      renderRecent();
      renderMasterList();
      renderLow();
      saveStateForCurrent();
      showToast('Edit saved');
      activePopup.remove();
      activePopup = null;
    } catch (error) {
      showToast('Error saving edit: ' + error.message);
    }
  });
}

function autoAdvanceToNext(currentEnrollment) {
  const date = dateSelect.value;
  const subject = subjectSelect.value;
  const currentIdx = realStudents.findIndex(s => s.enrollmentNumber === currentEnrollment);
  if (currentIdx === -1) {
    showToast('Current student not found');
    return;
  }
  // Search from next student to end
  let next = realStudents.slice(currentIdx + 1).find(s => {
    const rec = attendanceRecords[s.enrollmentNumber]?.dates[date]?.[subject];
    return !rec;
  });
  // If not found, wrap around to start
  if (!next) {
    next = realStudents.find(s => {
      const rec = attendanceRecords[s.enrollmentNumber]?.dates[date]?.[subject];
      return !rec;
    });
  }
  if (!next) {
    foundArea.innerHTML = `<div class="muted">All students marked for ${subject} on ${date}.</div>`;
    currentSelectedEnrollment = null;
    updateSelectedInList();
    showToast('All students marked');
    return;
  }
  currentSelectedEnrollment = next.enrollmentNumber;
  updateSelectedInList();
  showFound(next);
  searchInput.value = next.enrollmentNumber;
}

function showStudentDetails(student) {
  const modal = document.createElement('div');
  modal.style = 'position:fixed;top:0;left:0;width:100%;height:100%;background:rgba(0,0,0,0.5);display:flex;align-items:center;justify-content:center;z-index:10';
  const content = document.createElement('div');
  content.className = 'card';
  content.style = 'max-width:800px;width:90%;max-height:90%;overflow:auto;';
  content.innerHTML = `<div class="card-header"><div class="title">${escapeHtml(student.name)} - Attendance Details</div><button onclick="this.parentElement.parentElement.parentElement.remove()" style="background:none;border:none;color:var(--text);cursor:pointer;font-size:20px;">&times;</button></div>`;
  const allDates = SUBJECTS.reduce((o, s) => (o[s] = (lectureDates[s] || []).sort(), o), {});
  const totalL = SUBJECTS.reduce((sum, sub) => sum + allDates[sub].length, 0);
  const rec = attendanceRecords[student.enrollmentNumber] || { dates: {} };
  const totalP = SUBJECTS.reduce((sum, sub) => sum + allDates[sub].filter(d => rec.dates[d]?.[sub]?.status === 'present').length, 0);
  const overallPerc = totalL ? Math.round(totalP / totalL * 100) : 0;
  let detailsHTML = `<div class="muted">Overall Attendance: ${overallPerc}% (${totalP}/${totalL} days)</div>`;
  detailsHTML += '<div style="margin-top:10px;">';
  const chartData = SUBJECTS.map(sub => {
    const total = allDates[sub].length;
    const present = allDates[sub].filter(d => rec.dates[d]?.[sub]?.status === 'present').length;
    const perc = total ? Math.round(present / total * 100) : 0;
    const absentDays = allDates[sub].filter(d => rec.dates[d]?.[sub]?.status !== 'present' && rec.dates[d]?.[sub]).sort().join(', ') || 'None';
    detailsHTML += `<div><strong>${sub}:</strong> ${present}/${total} days (${perc}%)<br><span class="meta">Absent/Late Days: ${absentDays}</span></div>`;
    return perc;
  });
  detailsHTML += '</div>';
  content.innerHTML += detailsHTML;
  content.innerHTML += '<canvas id="attChart" style="margin-top:10px;"></canvas>';
  modal.appendChild(content);
  document.body.appendChild(modal);
  modal.addEventListener('click', e => { if (e.target === modal) modal.remove(); });
  const ctx = document.getElementById('attChart').getContext('2d');
  new Chart(ctx, {
    type: 'bar',
    data: {
      labels: SUBJECTS,
      datasets: [{
        label: 'Attendance %',
        data: chartData,
        backgroundColor: 'rgba(0,255,153,0.5)',
        borderColor: 'rgba(0,255,153,1)',
        borderWidth: 1
      }]
    },
    options: {
      responsive: true,
      scales: {
        y: { beginAtZero: true, max: 100, title: { display: true, text: 'Attendance (%)' } }
      },
      plugins: { legend: { display: true } }
    }
  });
}

function renderLow() {
  const from = fromDate.value || '1900-01-01';
  const to = toDate.value || '2100-01-01';
  const allDates = SUBJECTS.reduce((o, sub) => {
    o[sub] = (lectureDates[sub] || []).filter(d => d >= from && d <= to).sort();
    return o;
  }, {});
  const totalL = SUBJECTS.reduce((sum, sub) => sum + allDates[sub].length, 0);
  const studentsWithPerc = realStudents.map(s => {
    const rec = attendanceRecords[s.enrollmentNumber] || { dates: {} };
    const totalP = SUBJECTS.reduce((sum, sub) => sum + allDates[sub].filter(d => rec.dates[d]?.[sub]?.status === 'present').length, 0);
    const perc = totalL ? Math.round(totalP / totalL * 100) : 0;
    return { student: s, perc, totalP, totalL };
  }).filter(sp => sp.perc < 70 && sp.totalL > 0).sort((a, b) => a.perc - b.perc);
  lowList.innerHTML = '';
  studentsWithPerc.forEach(sp => {
    const div = document.createElement('div');
    div.className = 'rec-row';
    div.innerHTML = `
      <div class="left">
        <div class="avatar">${sp.student.name.split(' ').slice(0,2).map(w => w[0]).join('')}</div>
        <div>
          <div class="student-name">${escapeHtml(sp.student.name)}</div>
          <div class="meta">${sp.student.enrollmentNumber} ‚Ä¢ ${sp.totalP}/${sp.totalL} days</div>
        </div>
      </div>
      <div class="badge absent">${sp.perc}%</div>
    `;
    div.addEventListener('click', () => showStudentDetails(sp.student));
    lowList.appendChild(div);
  });
  if (!studentsWithPerc.length) lowList.innerHTML = '<div class="muted">No students below 70%</div>';
}

function buildPrintableHTML() {
  const from = fromDate.value;
  const to = toDate.value;
  let rows = '';
  const sortedStudents = realStudents.slice().sort((a, b) => a.enrollmentNumber.localeCompare(b.enrollmentNumber));
  if (from && to) {
    const allDates = SUBJECTS.reduce((o, s) => (o[s] = (lectureDates[s] || []).filter(d => d >= from && d <= to).sort(), o), {});
    rows = sortedStudents.map(s => {
      const rec = attendanceRecords[s.enrollmentNumber] || { dates: {} };
      const cells = SUBJECTS.map(sub => {
        const total = allDates[sub].length;
        const present = allDates[sub].filter(d => rec.dates[d]?.[sub]?.status === 'present').length;
        const perc = total ? Math.round(present / total * 100) : 0;
        return `${present}/${total} (${perc}%)`;
      });
      const totalL = SUBJECTS.reduce((sum, sub) => sum + allDates[sub].length, 0);
      const totalP = SUBJECTS.reduce((sum, sub) => sum + allDates[sub].filter(d => rec.dates[d]?.[sub]?.status === 'present').length, 0);
      const overallPerc = totalL ? Math.round(totalP / totalL * 100) : 0;
      return `<tr><td style="width:80px">${escapeHtml(s.enrollmentNumber)}</td><td style="width:200px">${escapeHtml(s.name)}</td>${cells.map(c => `<td style="width:100px">${c}</td>`).join('')}<td style="width:80px">${overallPerc}%</td></tr>`;
    }).join('');
    return `
      <div style="font-family:Arial;font-size:10px;">
        <h2 style="font-size:14px;">CO11 Attendance Summary - ${from} to ${to}</h2>
        <table style="width:100%;border-collapse:collapse;font-size:8px;">
          <thead><tr><th>Enrollment</th><th>Name</th>${SUBJECTS.map(s => `<th>${s}</th>`).join('')}<th>Overall</th></tr></thead>
          <tbody>${rows}</tbody>
        </table>
      </div>
    `;
  } else {
    const date = dateSelect.value;
    rows = sortedStudents.map(s => {
      const rec = attendanceRecords[s.enrollmentNumber] || { dates: {} };
      const cells = SUBJECTS.map(sub => rec.dates[date]?.[sub]?.status || '‚Äî');
      return `<tr><td style="width:80px">${escapeHtml(s.enrollmentNumber)}</td><td style="width:200px">${escapeHtml(s.name)}</td>${cells.map(c => `<td style="width:100px">${capitalize(escapeHtml(c))}</td>`).join('')}</tr>`;
    }).join('');
    return `
      <div style="font-family:Arial;font-size:10px;">
        <h2 style="font-size:14px;">CO11 Attendance - ${date}</h2>
        <table style="width:100%;border-collapse:collapse;font-size:8px;">
          <thead><tr><th>Enrollment</th><th>Name</th>${SUBJECTS.map(s => `<th>${s}</th>`).join('')}</tr></thead>
          <tbody>${rows}</tbody>
        </table>
      </div>
    `;
  }
}

async function downloadPDF() {
  try {
    printArea.innerHTML = buildPrintableHTML();
    await new Promise(r => setTimeout(r, 100));
    const { jsPDF } = window.jspdf;
    const pdf = new jsPDF('l', 'pt', 'a4');
    const pageWidth = pdf.internal.pageSize.getWidth();
    const pageHeight = pdf.internal.pageSize.getHeight();
    const margin = 20;
    const table = printArea.querySelector('table');
    const rows = table.querySelectorAll('tr');
    const rowHeight = 20;
    const maxRowsPerPage = Math.floor((pageHeight - margin * 2 - 30) / rowHeight); // 30 for header
    let currentRow = 0;

    while (currentRow < rows.length) {
      const pageRows = rows.length - currentRow > maxRowsPerPage ? maxRowsPerPage : rows.length - currentRow;
      const pageTable = document.createElement('table');
      pageTable.style = 'width:100%;border-collapse:collapse;font-size:8px;';
      pageTable.innerHTML = `
        <thead>${table.querySelector('thead').innerHTML}</thead>
        <tbody>${Array.from(rows).slice(currentRow, currentRow + pageRows).map(row => row.outerHTML).join('')}</tbody>
      `;
      printArea.innerHTML = `
        <div style="font-family:Arial;font-size:10px;">
          <h2 style="font-size:14px;">${printArea.querySelector('h2').textContent}</h2>
          ${pageTable.outerHTML}
        </div>
      `;
      const canvas = await html2canvas(printArea, { scale: 2, width: printArea.offsetWidth, height: printArea.offsetHeight });
      const imgData = canvas.toDataURL('image/png');
      const imgHeight = (canvas.height / canvas.width) * pageWidth;
      pdf.addImage(imgData, 'PNG', margin, margin, pageWidth - 2 * margin, imgHeight);
      currentRow += pageRows;
      if (currentRow < rows.length) {
        pdf.addPage();
      }
    }

    const from = fromDate.value;
    const to = toDate.value;
    const filename = from && to ? `co11_attendance_summary_${from}_to_${to}.pdf` : `co11_attendance_${dateSelect.value}.pdf`;
    pdf.save(filename);
    showToast('PDF downloaded');
    return filename;
  } catch (error) {
    showToast('Error generating PDF: ' + error.message);
  }
}

function buildAttendanceSnapshot() {
  const from = fromDate.value;
  const to = toDate.value;
  if (from && to) {
    const allDates = SUBJECTS.reduce((o, s) => (o[s] = (lectureDates[s] || []).filter(d => d >= from && d <= to).sort(), o), {});
    return realStudents.map(s => {
      const rec = attendanceRecords[s.enrollmentNumber] || { dates: {} };
      const subjObj = {};
      SUBJECTS.forEach(sub => {
        const total = allDates[sub].length;
        const present = allDates[sub].filter(d => rec.dates[d]?.[sub]?.status === 'present').length;
        const perc = total ? Math.round(present / total * 100) : 0;
        subjObj[sub] = `${present}/${total} (${perc}%)`;
      });
      const totalL = SUBJECTS.reduce((sum, sub) => sum + allDates[sub].length, 0);
      const totalP = SUBJECTS.reduce((sum, sub) => sum + allDates[sub].filter(d => rec.dates[d]?.[sub]?.status === 'present').length, 0);
      const overallPerc = totalL ? Math.round(totalP / totalL * 100) : 0;
      return { enrollmentNumber: s.enrollmentNumber, name: s.name, class: s.class, ...subjObj, overall: `${overallPerc}%` };
    });
  } else {
    const date = dateSelect.value;
    return realStudents.map(s => {
      const rec = attendanceRecords[s.enrollmentNumber] || { dates: {} };
      const subjObj = {};
      SUBJECTS.forEach(sub => subjObj[sub] = rec.dates[date]?.[sub]?.status || '‚Äî');
      return { enrollmentNumber: s.enrollmentNumber, name: s.name, class: s.class, ...subjObj };
    });
  }
}

function toCSV(rows) {
  const from = fromDate.value;
  const to = toDate.value;
  const header = ['Enrollment', 'Name', 'Class', ...SUBJECTS, ...(from && to ? ['Overall'] : [])];
  return [header.join(',')].concat(rows.map(r => {
    const q = v => `"${String(v).replace(/"/g, '""')}"`;
    return [q(r.enrollmentNumber), q(r.name), q(r.class), ...SUBJECTS.map(s => q(r[s])), ...(from && to ? [q(r.overall)] : [])].join(',');
  })).join('\n');
}

function downloadCSV() {
  try {
    const rows = buildAttendanceSnapshot();
    const csv = toCSV(rows);
    const blob = new Blob([csv], { type: 'text/csv' });
    const url = URL.createObjectURL(blob);
    const a = document.createElement('a');
    a.href = url;
    const from = fromDate.value;
    const to = toDate.value;
    a.download = from && to ? `co11_attendance_summary_${from}_to_${to}.csv` : `co11_attendance_${dateSelect.value}.csv`;
    a.click();
    URL.revokeObjectURL(url);
    showToast('CSV downloaded');
  } catch (error) {
    showToast('Error generating CSV: ' + error.message);
  }
}

function openMailToDean(filename) {
  const dean = deanEmailInput.value.trim() || 'dean@example.com';
  const from = fromDate.value;
  const to = toDate.value;
  let subjectLine, body;
  if (from && to) {
    const allDates = SUBJECTS.reduce((o, s) => (o[s] = (lectureDates[s] || []).filter(d => d >= from && d <= to).sort(), o), {});
    const counts = SUBJECTS.reduce((o, sub) => {
      o[sub] = { present: 0, late: 0, absent: 0, notMarked: 0 };
      realStudents.forEach(s => {
        const rec = attendanceRecords[s.enrollmentNumber] || { dates: {} };
        allDates[sub].forEach(d => {
          const status = rec.dates[d]?.[sub]?.status;
          if (status === 'present') o[sub].present++;
          else if (status === 'late') o[sub].late++;
          else if (status === 'absent') o[sub].absent++;
          else o[sub].notMarked++;
        });
      });
      return o;
    }, {});
    subjectLine = encodeURIComponent(`CO11 Attendance Summary - ${from} to ${to}`);
    body = encodeURIComponent(`Dear Dean,\n\nSummary for period ${from} to ${to}:\n` + SUBJECTS.map(sub => `${sub}: Present ${counts[sub].present}, Late ${counts[sub].late}, Absent ${counts[sub].absent}, Unmarked ${counts[sub].notMarked}`).join('\n') + `\n\nAttached: ${filename}\n\nRegards,\nInstructor`);
  } else {
    const date = dateSelect.value;
    const subject = subjectSelect.value;
    const counts = summarizeCountsForSubject(subject, date);
    subjectLine = encodeURIComponent(`CO11 Attendance - ${subject} - ${date}`);
    body = encodeURIComponent(`Dear Dean,\n\nSummary for ${subject} on ${date}:\nPresent: ${counts.present}\nLate: ${counts.late}\nAbsent: ${counts.absent}\nUnmarked: ${counts.notMarked}\n\nAttached: ${filename}\n\nRegards,\nInstructor`);
  }
  window.location.href = `mailto:${dean}?subject=${subjectLine}&body=${body}`;
}

function summarizeCountsForSubject(subject, date) {
  let present = 0, absent = 0, late = 0, notMarked = 0;
  realStudents.forEach(s => {
    const status = attendanceRecords[s.enrollmentNumber]?.dates[date]?.[subject]?.status;
    if (status === 'present') present++;
    else if (status === 'absent') absent++;
    else if (status === 'late') late++;
    else notMarked++;
  });
  return { present, absent, late, notMarked };
}

btnAuthAction.addEventListener('click', () => {
  const u = auUsername.value.trim();
  const e = auEmail.value.trim();
  const p = auPassword.value.trim();
  if (!u || !p) return showToast('Enter username & password');
  try {
    loginAccount(u, p);
    showToast('Logged in');
    onAuthChanged();
  } catch (err) {
    if (err.message.includes('not found')) {
      try {
        createAccount(u, p, e);
        loginAccount(u, p);
        showToast('Account created');
        onAuthChanged();
      } catch (error) { showToast(error.message); }
    } else showToast(err.message);
  }
});

btnForgot.addEventListener('click', () => {
  const username = prompt('Enter username');
  if (!username) return;
  const users = getUsers();
  const user = users[username.toLowerCase()];
  if (!user) return showToast('User not found');
  const inputEmail = prompt('Enter registered email');
  if (inputEmail && inputEmail.toLowerCase() !== user.email) return showToast('Email mismatch');
  const otp = Math.floor(Math.random() * 9000 + 1000);
  alert(`OTP sent to your email: ${otp} (for demo)`);
  const inputOtp = prompt('Enter OTP');
  if (parseInt(inputOtp) !== otp) return showToast('Invalid OTP');
  const newPass = prompt('Enter new password (min 3 chars)');
  if (!newPass || newPass.length < 3) return showToast('Invalid password');
  user.pwdHash = hashString(newPass);
  setUsers(users);
  showToast('Password reset successfully');
});

btnLogoutTop.addEventListener('click', () => { logout(); showToast('Logged out'); });

clearRangeBtn.addEventListener('click', () => {
  fromDate.value = '';
  toDate.value = '';
  renderLow();
});

async function onAuthChanged() {
  const cur = getCurrent();
  loggedInfo.textContent = cur ? cur.username : 'Not signed in';
  btnLogoutTop.style.display = cur ? 'inline-block' : 'none';
  if (cur) await loadStateForCurrent();
  else {
    attendanceRecords = {};
    recentAttendance = SUBJECTS.reduce((o, s) => { o[s] = []; return o; }, {});
    lectureDates = SUBJECTS.reduce((o, s) => { o[s] = []; return o; }, {});
    renderMasterList();
    renderRecent();
    renderLow();
  }
}
onAuthChanged();

searchBtn.addEventListener('click', () => {
  const q = searchInput.value.trim();
  if (!q) return showToast('Enter enrollment or name');
  const student = findStudent(q);
  if (!student) return showToast('Student not found');
  currentSelectedEnrollment = student.enrollmentNumber;
  updateSelectedInList();
  showFound(student);
});

searchInput.addEventListener('keydown', e => { if (e.key === 'Enter') searchBtn.click(); });
downloadPdfBtn.addEventListener('click', downloadPDF);
finalizeBtn.addEventListener('click', async () => {
  try {
    const filename = await downloadPDF();
    setTimeout(() => openMailToDean(filename), 500);
  } catch (error) {
    showToast('Error finalizing report: ' + error.message);
  }
});
lowRefresh.addEventListener('click', renderLow);
document.addEventListener('keydown', e => { if (e.ctrlKey && e.key === 's') { e.preventDefault(); downloadCSV(); } });

function showToast(msg) {
  const ex = document.querySelector('.toast');
  if (ex) ex.remove();
  const t = document.createElement('div');
  t.className = 'toast';
  t.textContent = msg;
  document.body.appendChild(t);
  setTimeout(() => t.remove(), 2000);
}

renderMasterList();
renderLow();
</script>
</body>
</html>
