let attendanceRecords = {};
let recentAttendance = SUBJECTS.reduce((o, s) => { o[s] = []; return o; }, {});
let lectureDates = SUBJECTS.reduce((o, s) => { o[s] = []; return o; }, {});
let currentSelectedEnrollment = null;

const USERS_KEY = 'rc_users_v1';
const CURRENT_KEY = 'rc_current_user_v1';
const DB_NAME = 'rc_attendance_db';
const DB_VERSION = 4; // Incremented to ensure clean schema
let db;

function openDB() {
  return new Promise((resolve, reject) => {
    const request = indexedDB.open(DB_NAME, DB_VERSION);
    request.onerror = () => reject(request.error);
    request.onsuccess = () => {
      db = request.result;
      resolve(db);
    };
    request.onupgradeneeded = (e) => {
      db = e.target.result;
      if (!db.objectStoreNames.contains('accountData')) {
        const store = db.createObjectStore('accountData', { keyPath: 'username' });
        store.createIndex('timestamp', 'timestamp', { unique: false });
      }
      if (!db.objectStoreNames.contains('attendanceRecords')) {
        const store = db.createObjectStore('attendanceRecords', { keyPath: 'id' });
        store.createIndex('username', 'username', { unique: false });
        store.createIndex('date', 'date', { unique: false });
        store.createIndex('enrollmentNumber', 'enrollmentNumber', { unique: false });
      }
    };
  });
}

async function saveAccountData(username, payload) {
  if (!db) await openDB();
  return new Promise((resolve, reject) => {
    const tx = db.transaction(['accountData'], 'readwrite');
    const store = tx.objectStore('accountData');
    const request = store.put({ username, ...payload });
    request.onsuccess = resolve;
    request.onerror = () => reject(request.error);
  });
}

async function saveAttendanceRecord(username, record) {
  if (!db) await openDB();
  return new Promise((resolve, reject) => {
    const tx = db.transaction(['attendanceRecords'], 'readwrite');
    const store = tx.objectStore('attendanceRecords');
    const request = store.put({ id: `${username}_${record.enrollmentNumber}_${record.date}_${record.subject}`, username, ...record });
    request.onsuccess = resolve;
    request.onerror = () => reject(request.error);
  });
}

async function loadAccountData(username) {
  if (!db) await openDB();
  return new Promise((resolve, reject) => {
    const tx = db.transaction(['accountData'], 'readonly');
    const store = tx.objectStore('accountData');
    const request = store.get(username);
    request.onsuccess = () => resolve(request.result);
    request.onerror = () => reject(request.error);
  });
}

async function loadAttendanceRecords(username) {
  if (!db) await openDB();
  return new Promise((resolve, reject) => {
    const tx = db.transaction(['attendanceRecords'], 'readonly');
    const store = tx.objectStore('attendanceRecords');
    const index = store.index('username');
    const request = index.getAll(username);
    request.onsuccess = () => resolve(request.result);
    request.onerror = () => reject(request.error);
  });
}

async function loadStateForCurrent() {
  const cur = getCurrent();
  if (!cur) return;
  try {
    const parsed = await loadAccountData(cur.username);
    if (parsed) {
      attendanceRecords = parsed.attendanceRecords || {};
      lectureDates = parsed.lectureDates || SUBJECTS.reduce((o, s) => { o[s] = []; return o; }, {});
    }
    const records = await loadAttendanceRecords(cur.username);
    recentAttendance = SUBJECTS.reduce((o, s) => { o[s] = []; return o; }, {});
    records.forEach(rec => {
      const student = realStudents.find(s => s.enrollmentNumber === rec.enrollmentNumber);
      if (!student) return;
      recentAttendance[rec.subject].push({
        id: rec.id,
        studentName: student.name,
        enrollmentNumber: rec.enrollmentNumber,
        status: rec.status,
        subject: rec.subject,
        date: rec.date,
        timestamp: rec.timestamp
      });
      if (!attendanceRecords[rec.enrollmentNumber]) {
        attendanceRecords[rec.enrollmentNumber] = { dates: {} };
      }
      if (!attendanceRecords[rec.enrollmentNumber].dates[rec.date]) {
        attendanceRecords[rec.enrollmentNumber].dates[rec.date] = {};
      }
      attendanceRecords[rec.enrollmentNumber].dates[rec.date][rec.subject] = {
        status: rec.status,
        timestamp: rec.timestamp
      };
      if (!lectureDates[rec.subject].includes(rec.date)) {
        lectureDates[rec.subject].push(rec.date);
      }
    });
    renderMasterList();
    renderRecent();
    renderLow();
  } catch (error) {
    showToast('Error loading data: ' + error.message);
  }
}

function readJSON(key) { try { return JSON.parse(localStorage.getItem(key)); } catch(e) { return null; } }
function writeJSON(key, val) { localStorage.setItem(key, JSON.stringify(val)); }
function getUsers() { return readJSON(USERS_KEY) || {}; }
function setUsers(o) { writeJSON(USERS_KEY, o); }
function hashString(str) {
  let h1 = 0xdeadbeef, h2 = 0x41c6ce57;
  for(let i = 0, ch; i < str.length; i++) {
      ch = str.charCodeAt(i);
      h1 = Math.imul(h1 ^ ch, 2654435761);
      h2 = Math.imul(h2 ^ ch, 1597334677);
  }
  h1  = Math.imul(h1 ^ (h1 >>> 16), 2246822507);
  h1 ^= Math.imul(h2 ^ (h2 >>> 13), 3266489909);
  h2  = Math.imul(h2 ^ (h2 >>> 16), 2246822507);
  h2 ^= Math.imul(h1 ^ (h1 >>> 13), 3266489909);
  return 4294967296 * (2097151 & h2) + (h1 >>> 0);
}
function createAccount(username, password, email) {
  username = username.trim().toLowerCase();
  if (!username || password.length < 3) throw new Error('Invalid username or password');
  if (email && !email.includes('@')) throw new Error('Invalid email');
  const users = getUsers();
  if (users[username]) throw new Error('Username taken');
  users[username] = { pwdHash: hashString(password), email: email ? email.toLowerCase() : '', created: new Date().toISOString() };
  setUsers(users);
  return users[username];
}
function loginAccount(username, password) {
  username = username.trim().toLowerCase();
  const users = getUsers();
  const u = users[username];
  if (!u) throw new Error('User not found');
  if (hashString(password) !== u.pwdHash) throw new Error('Invalid password');
  writeJSON(CURRENT_KEY, { username, loggedAt: new Date().toISOString() });
  return { username };
}
function logout() { localStorage.removeItem(CURRENT_KEY); onAuthChanged(); }
function getCurrent() { return readJSON(CURRENT_KEY); }

function saveStateForCurrent() {
  const cur = getCurrent();
  if (!cur) return;
  try {
    saveAccountData(cur.username, { attendanceRecords, lectureDates, timestamp: new Date().toISOString() });
  } catch (error) {
    showToast('Error saving data: ' + error.message);
  }
}

